@using BikeCommunitySite.Models;
@model IList<BikeCommunitySite.Models.AccomodationModel.Result>


    @foreach (var item in Model)
    {
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <div class="intro-text text-center">
                    @item.name
                    <strong>@item.rating</strong>
                </div>
                <div class="col-md-6">
                    <img class="img-responsive img-border-left"
                         src="@item.icon" alt="">
                </div>
                <div class="col-md-6">
                    <p>Description:</p>
                    <p>@item.opening_hours</p>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
        }

