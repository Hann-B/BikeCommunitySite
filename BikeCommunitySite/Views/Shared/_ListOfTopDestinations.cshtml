@using BikeCommunitySite.Models;
@model Sakura.AspNetCore.IPagedList<BikeCommunitySite.Models.GooglePlaceModel.Result>

@if (Model != null && Model.TotalPage > 0)
{
    <script>
        var myDiv = $('#description');
        myDiv.text(myDiv.text().substring(0, 200));
    </script>

    @foreach (var place in Model)
    {
            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <div class="intro-text text-center">
                            @place.name
                            <strong>@place.rating</strong>
                        </div>
                        <div class="col-md-6">
                            @if (place.icon!=null)
                            {
                                <img class="img-responsive img-border-left"
                                     src="@place.icon" alt="">
                            }
                            else
                            {
                                <img style="width:50%;" img-responsive img-border-left"
                                     src="~/images/destinationsIcon.png" alt="">
                            }
                        </div>
                        <div class="col-md-6">
                            <p>Description:</p>
                            <p id="description" 
                               style="white-space:nowrap; 
                                      overflow:hidden;
                                      text-overflow:ellipsis;
                                      ">
                            @place.scope</p>
                            <p><a href="@Url.Action("DestinationDetails", "Place", new GooglePlaceDetailModel.Result {place_id=place.place_id})" class="btn btn-primary" role="button">Details</a></p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        }
    }
}