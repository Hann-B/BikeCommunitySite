@using BikeCommunitySite.Models;
@model IQueryable<BikeCommunitySite.Models.PlaceModel.Place>


@foreach (var place in Model)
{

    @foreach (var act in place.activities)
    {
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <div class="intro-text text-center">
                        @place.name
                        <strong>@act.rank</strong>
                    </div>
                    <div class="col-md-6">
                        <img class="img-responsive img-border-left" 
                             src="@act.thumbnail" alt="">
                    </div>
                    <div class="col-md-6">
                        <p>Description:</p>
                        <p>@place.description</p>
                        <p><a href="@Url.Action("Details","Places", new PlaceModel.Place{lat=place.lat, lon=place.lon, city=place.city})" class="btn btn-primary" role="button">Details</a></p>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>

    }
}

