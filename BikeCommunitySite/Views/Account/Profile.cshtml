@model BikeCommunitySite.Models.ApplicationUser
@{
    ViewData["Title"] = "User Profile";
}

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                @ViewData["Title"]
                <strong></strong>
            </h2>
            <a href="@Url.Action("Account", "EditProfile", new ApplicationUser { Id = Model.Id })" class="btn btn-block" >Edit</a>
            <div class="col-md-2">
                <img src="@Model.Photo"
                     alt="" class="img-rounded img-responsive" />
            </div>

            <div class="col-md-4">
                <h3>@Model.Name</h3>
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> @Model.EmailAddress
                </p>
            </div>
            <hr>
        </div>
    </div>
</div>
